generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  id      Int      @id @default(autoincrement())
  name    String
  email   String   @unique
  tasks   Task []
}

model Task {
  id        Int      @id @default(autoincrement())
  tittle    String
  concluded Boolean  @default(false)
  user      User  @relation(fields: [userId], references: [id])
  userId    Int
}
